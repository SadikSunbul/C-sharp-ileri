@using Restorant.Application.ViewModel._Like;
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Beğenilen Ürünler</title>
    <link rel="stylesheet" href="style.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        main {
            max-width: 1100px;
            margin: 0 auto;
        }



        main {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            padding: 20px;
        }

        .product {
            margin: 20px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            text-align: center;
        }

            .product img {
                max-width: 100%;
                height: auto;
            }

            .product h2 {
                margin: 10px 0;
            }

            .product p {
                margin: 5px 0;
            }

        button {
            background-color: #4CAF50;
            color: #fff;
            padding: 8px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
        }

            button:hover {
                background-color: #3e8e41;
            }

    </style>
</head>
<body>

    <main>
        @{
            foreach (var item in ViewBag.Likelist as List<VM_Like_List>)
            {


                <section class="product">
                    <img src="urun1.jpg" alt="Ürün 1">
                    <h2>@item.İsim</h2>
                    <p>Fiyat: @item.Fiyat</p>
                    <form asp-action="Sepeteekle" asp-controller="Home" method="post" >
                        <input type="hidden" name="YemekId" value="@item.YemekId" />
                        <button class="add-to-cart" asp-action="Sepeteekle" asp-controller="Home">Sepete Ekle</button>
                    </form>
                    <form asp-action="LikeDelete" asp-controller="Home" method="post">
                        <input type="hidden" name="LikeId" value="@item.LikeId" method="post" />
                        <button class="remove-like" asp-action="LikeDelete" asp-controller="Home">Begeniyi Kaldır</button>
                    </form>
                </section>


            }
        }
    </main>
</body>
</html>
