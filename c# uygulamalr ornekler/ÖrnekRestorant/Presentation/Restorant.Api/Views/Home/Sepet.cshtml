@using Restorant.Application.ViewModel._Basket;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sepetim</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: sans-serif;
        }

        h1 {
            text-align: center;
            margin: 2rem 0;
        }

        .container {
            max-width: 1200px;
            margin: auto;
            padding: 2rem;
        }

        .item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #ccc;
        }

            .item img {
                width: 10rem;
                height: auto;
                margin-right: 1rem;
            }

            .item h3,
            .item p {
                margin: 0;
            }

            .item button {
                background-color: tomato;
                color: white;
                border: none;
                padding: 0.5rem;
                cursor: pointer;
            }

        .total {
            margin-top: 2rem;
            text-align: right;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .checkout {
            background-color: green;
            color: white;
            border: none;
            padding: 1rem;
            font-size: 1.2rem;
            font-weight: bold;
            cursor: pointer;
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <h1>Sepetim</h1>
    <div class="container">
        @{
            double toplam = 0;
            foreach (var item in ViewBag.sepet )
            {
                <div class="item">
                    <img src="https://via.placeholder.com/150" alt="Product Image" />
                    <div>
                        <h3>Ürün Adı:@item.YemekAdı</h3>
                        <p>Adet: @item.Adet</p>
                        <p>Fiyat: @item.Price</p>
                        @{
                            toplam += item.TotalPrice;
                        }
                        <p>Toplam Fiyat: @item.TotalPrice</p>
                    </div>
                    <form asp-action="SepetDelete" asp-controller="Home" method="post">
                        <input type="hidden" name="BasketId" value="@item.BasketId" />
                        <button>İptal Et</button>
                    </form>
                    
                </div>
            }
        }
        <div class="total">Toplam Fiyat: @toplam</div>
        <form asp-action="Siparişler" asp-controller="Home" method="get">
            @*<input type="hidden" name="ürünler" value="@ViewBag.sepet" />*@
            <button class="checkout">Siparişi Onayla</button>
        </form>
        
    </div>
</body>
</html>
