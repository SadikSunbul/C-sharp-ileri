    <style>
        /* genel stil */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        /* her kutu için stil */
        .siparis-kutusu {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: #F9F9F9;
            border: 1px solid #DDD;
            margin-bottom: 10px;
            padding: 10px;
            width: 80%;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }

            .siparis-kutusu img {
                max-height: 80px;
                object-fit: cover;
                margin-right: 10px;
            }
        /* içerik için stil */
        .siparis-bilgileri {
            display: flex;
            flex-direction: column;
            text-align: right;
        }

        .siparis-ad {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .siparis-masa-no {
            font-size: 18px;
            margin-bottom: 5px;
        }

        .siparis-tarih {
            font-size: 16px;
            color: #888;
        }

        .siparis-buton {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }

            .siparis-buton:hover {
                background-color: #3E8E41;
            }
    </style>
</head>
